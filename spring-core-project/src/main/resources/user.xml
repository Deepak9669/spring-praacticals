<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<!-- User user = new User(); -->
<!-- By using setter getter -->
	<bean id="user" class="com.rays.test.User">
		<property name="name" value="ram"></property>  <!-- setName("ram"); -->
		<property name="address" value="sehore"></property>   <!-- setAddress("sehore"); -->
	</bean>
	
	<bean id="person" class="com.rays.test.Person">
		<property name="name" value="ram"></property>  <!-- setName("ram"); -->
		<property name="login" value="ram@gmail.com"></property>   <!-- setAddress("ram@gmail.com"); -->
		<property name="password" value="ram@123"></property>
	</bean>

	<bean id="user1" class="com.rays.test.User">
		<property name="name" value="Deepak"></property> <!-- setName("Deepak"); -->
		<property name="address" value="Bhopal"></property>    <!-- setAddress("Bhopal"); -->
		
	</bean>

<!--By Using Constructor  -->

	<bean id="user2" class="com.rays.test.User">
		<constructor-arg value="Shyam"></constructor-arg>   <!-- setName("Shyam"); -->
		<constructor-arg value="Indore"></constructor-arg>    <!-- setAddress("Indore"); -->
		
	</bean>
	
	<bean id ="person1" class ="com.rays.test.Person">
	<constructor-arg value="deepak"></constructor-arg>
	<constructor-arg value="dev@gmail.com"></constructor-arg>
	<constructor-arg value="deepak@123"></constructor-arg>
	</bean>






</beans>